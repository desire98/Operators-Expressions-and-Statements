using System;

class CheckABit
{
    static void Main()
    {
        Console.WriteLine("Enter n:");
        int n = int.Parse(Console.ReadLine());
        Console.WriteLine("Enter position of the index:");
        int position = int.Parse(Console.ReadLine());
        Console.WriteLine(((1 << position) & n) > 0 ? true : false);
    }
}

